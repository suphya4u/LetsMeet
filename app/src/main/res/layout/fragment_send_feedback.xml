<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.letsmeet.android.activity.fragments.SendFeedbackFragment">

    <EditText
        android:id="@+id/send_feedback_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="@string/send_feedback_edittext"/>

    <Button
        android:id="@+id/send_feedback_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_feedback_button"/>
</LinearLayout>
